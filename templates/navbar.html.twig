{% block nav %}
<div  class="navbar navbar-expand-md navbar-light bg-light sticky-top border-bottom">
  <div class="container-fluid">
    <a style="width: 54px;" class="navbar-brand" href="/">
      <svg viewBox="0 0 80 80" xmlns:svg="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg">
        <g fill="#0000" stroke="#252525" stroke-width="2">
          <rect x="25" y="20" width="30" height="50" rx="6" ry="6"/>
          <rect x="28" y="24" width="24" height="36" rx="1" ry="1"/>
          <circle cx="40" cy="65" r="2"/>
          <path stroke-linecap="round" d="m36 16 a6 6 0 0 1 9 0m3-3a10 10 0 0 0 -15 0m-3-3a14 14 0 0 1 21 0"/>
        </g>
      </svg>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto my-2 mb-lg-0">
      {% if app.user %}
        <li class="nav-item"><a class="nav-link" href="{{ url('app_home') }}">{{ 'Home'|trans }}</a></li>
        <li class="nav-item dropdown">
          <a id="navbarDropdown" class="nav-link dropdown-toggle " href="#" data-bs-toggle="dropdown" aria-expanded="false">{{ app.user.lastname }} {{ app.user.firstname }}<span class="caret"></span></a>
          <div class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown" style="position: absolute;">
              <a class="dropdown-item " href="{{ url('app_logout') }}">{{ 'Logout'|trans }}</a>
          </div>
        </li>
      {% else %}
        <li class="nav-item"><a class="nav-link" href="{{ url('app_login') }}">{{ 'Login'|trans }}</a></li>
      {% endif %}
      <li class="nav-item"><a class="nav-link{% if app.request.getLocale() == 'en' %} active{% endif %}" href="{{ path('app_locale', {_locale: 'en'}) }}">En</a></li>
      <li class="nav-item"><a class="nav-link{% if app.request.getLocale() != 'en' %} active{% endif %}" href="{{ path('app_locale', {_locale: 'uk'}) }}">Uk</a></li>
      </ul>
    </div>
  </div>
</div>
{% endblock %}