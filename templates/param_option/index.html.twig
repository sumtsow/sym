{% extends 'base.html.twig' %}

{% block title %}Parameter possible options list{% endblock %}

{% block body %}
<div data-controller="admin-index">
  <h1>Parameter options list</h1>
  <p>
    <label for="select-parameter">Parameter</label>
    <select id="select-parameter" data-admin-index-target="select" data-action="click->admin-index#change">
      <option value="0" selected="selected">All</option>
      {% for av_parameter in av_parameters %}
      <option value="{{ av_parameter.getId() }}">{{ av_parameter.getName() }}</option>
      {% endfor %}
    </select>
  </p>
  <p><a class="btn btn-primary" role="button" href="{{ path('app_admin_param_option_create') }}">Add new</a></p>
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>av_parameter</th>
        <th>value</th>
        <th>created_at</th>
        <th>updated_at</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody data-admin-index-target="rows" data-path="param_option"></tbody>
  </table>
</div>
{% endblock %}