{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm, {
        attr: {class: 'mx-auto login-form'}
      }) }}
        {{ form_row(registrationForm.email, {
          attr: {class: 'form-control'}
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: {class: 'form-control'}
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Lastname',
            attr: {class: 'form-control'}
        }) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Firstname',
            attr: {class: 'form-control mb-3'}
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
          attr: {class: 'form-check-input ms-2'}
        }) }}

        <button type="submit" class="btn btn-primary mt-3 me-3">Register</button>
        <a class="btn btn-outline-primary mt-3 ms-4" href="{{ path('app_login') }}">Already registered?</a>
    {{ form_end(registrationForm) }}
{% endblock %}
