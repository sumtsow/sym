{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit'|trans }} {{ 'Device'|trans }}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/home">{{ 'Home'|trans }}</a></li>
    <li class="breadcrumb-item"><a href="/admin">{{ 'Admin Tools'|trans }}</a></li>
    <li class="breadcrumb-item"><a href="/admin/device">{{ 'Devices'|trans }}</a></li>
